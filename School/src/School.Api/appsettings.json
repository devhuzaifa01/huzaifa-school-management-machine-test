{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Hour",
          "retainedFileCountLimit": 30, // Kept a limit of 30 days because this is an assignment and we won't need more production level logging
          "shared": true,
          "flushToDiskInterval": "00:00:01"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "bee503f887429a143d5263b2794a6999",
    "Issuer": "School.Api",
    "Audience": "School.ApiUsers",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays":  7
  },
  "FileUploadSettings": {
    "AllowedExtensions": [ ".pdf", ".xlsx", ".xls", ".csv", ".docx", ".txt" ],
    "SubmissionsFolder": "submissions"
  },
  "Caching": {
    "CourseExpirySeconds": 60,
    "DepartmentExpirySeconds": 60
  }
}
